// General styles

html {
	overflow-y: scroll;
}

*{
	-webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

body, html, table, tbody, tfoot, thead, tr, th, td {
	margin: 0;
	outline: 0;
	padding: 0;
	vertical-align: baseline;
	color: dark-grey;
	font-family: roboto, sans-serif;
	font-weight: 200;
	height: 100%;
}

hr {
	border-bottom: 1px solid lightest-grey;
}

h1, h2, h3, h4, h5 {
	color:dark-text;
	letter-spacing: 150%;
	font-family: 'futura-pt', 'Josefin Sans', sans-serif;
}

h1 {
	font-size:52px;
}

h2 {
		color:#000;
		font-family: 'futura-pt', 'Josefin Sans', sans-serif;
		text-transform:none;
		font-weight:300;
		font-style:normal;
		font-size:42px;
		color:dark-text;
}

h3 {
	font-weight:bold;
	font-size:32px;
	line-height:45px;
	text-align:center;
}

p{
	font-size:21px;
	color:dark-text;
	font-weight:300;
	font-family:roboto, sans-serif;
	line-height:30px;
	-webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

.btn-red {
	border:2px solid primary-red;
	color:primary-red;
	background-color: white !important;
	
    &:focus {
        color: red !important;
    }
    
	&:hover {
		background-color: primary-red !important;
		color: white;
	}
}

.btn-black {
	border:2px solid black;
	color:#000;
}

.btn-primary {
		background:transparent;
		padding:15px 40px;
		font-size:16px;
		font-family: roboto, sans-serif;
		font-weight:bold;
		letter-spacing:.8px;
		border:solid 4px;
		&.turq{
			border:4px solid turq;
			span{
				color:turq;
			}
			&:hover, &:active, &:focus {
				background-color:turq;
				border:4px solid turq;
				span {
					color:dark-text;
				}
			}
		}
		&.purple{
			border:4px solid purple;
			span{
				color:turq;
			}
			&:hover, &:active, &:focus {
				background-color:purple;
				border:4px solid purple;
				span {
					color:white;
				}
			}
		}
		&.tan{
			border:4px solid tan;
			span{
				color:tan;
			}
			&:hover, &:active, &:focus {
				background-color:tan;
				
				span {
					color:dark-text;
				}
			}

		}
		&.white{
			border:4px solid white;
			span{
				color:white;
			}
			&:hover, &:active, &:focus {
				background-color:white;
				
				span {
					color:light-turq;
				}
			}

		}

}

.btn-sml{
	font-size: 14px;
    font-weight: normal;
    letter-spacing: .8px;
    padding: 10px 20px;
}

.btn-dash{
	border: solid 2px;
    font-size: 14px;
