}



.btn-xsml{
	border: solid 3px;
	font-size:10px;
	padding:10px 25px;
	float:left;
	margin-top:20px;

	&.merch{
		background-color:#272f77;
		border:2px solid #272f77!important;
		color:white;
		margin-right:15px;
		&:hover{
			background-color:transparent;
			color:#272f77;
			border:2px solid #272f77!important;
		}
		&:focus, &:active{
			background-color:#282f77;
			border-color:#282f77;
		}
	}

	&.browse{
		background-color:#f1cb89;
		border:2px solid #f1cb89!important;
		color:white;
		&:hover{
			background-color:transparent;
